<launch>
	<node name="mapper" type="mapper" pkg="ethzasl_icp_mapper" output="screen">
		<remap from="cloud_in" to="/lidar_to_point_cloud_transformer/assembled_lidar_point_cloud" />
		<param name="subscribe_scan" value="false" />
		<param name="icpConfig" value="$(find ethzasl_icp_mapper_drc)/parameters/outdoor_simulation/icp.yaml" />
		<param name="inputFiltersConfig" value="$(find ethzasl_icp_mapper_drc)/parameters/outdoor_simulation/input_filters.yaml" />
		<param name="mapPostFiltersConfig" value="$(find ethzasl_icp_mapper_drc)/parameters/outdoor_simulation/map_post_filters.yaml" />
		<param name="odom_frame" value="/world" />
		<param name="map_frame" value="/world_icp" />
		<param name="icp_correction_frame" value="/pelvis" />
		<param name="publish_tf_correction" value="false" />
		<param name="useROSLogger" value="true" />
		<param name="minOverlap" value="0.2" /> 
		<param name="maxOverlapToMerge" value="0.9" /> 
		<param name="minReadingPointCount" value="1000" /> 
		<param name="minMapPointCount" value="1000" /> 
		<param name="localizing" value="true" /> 
		<param name="mapping" value="true" />
	</node>
</launch>
